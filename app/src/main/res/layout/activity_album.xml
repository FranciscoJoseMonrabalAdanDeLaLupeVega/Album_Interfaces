<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a2dam.album.Album">

    <ScrollView
        android:layout_width="190dp"
        android:layout_height="510dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#494b4b"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="5dp">

            <TextView
                android:id="@+id/album4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/album2"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="181dp"
                android:background="#cc1485"
                android:text="Album 4"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/album"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="#b01111"
                android:text="Album 1"
                android:clickable="true"/>

            <TextView
                android:id="@+id/album2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/album"
                android:layout_margin="10dp"
                android:background="#0d1bb9"
                android:text="TextView" />

            <TextView
                android:id="@+id/album3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/album2"
                android:layout_margin="10dp"
                android:background="#27b80a"
                android:text="TextView" />
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="190dp"
        android:layout_height="510dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp">

        <GridLayout
            android:id="@+id/fotosLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="0dp">

        </GridLayout>
    </ScrollView>

</LinearLayout>
